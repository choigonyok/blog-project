FROM --platform=linux/amd64 jenkins/jenkins:lts-jdk17

USER root

RUN apt-get update && apt-get install -y docker.io git

RUN jenkins-plugin-cli --plugins kubernetes
RUN jenkins-plugin-cli --plugins golang:1.4 
RUN jenkins-plugin-cli --plugins slack:684.v833089650554

EXPOSE 8080
EXPOSE 50000

RUN chown -R jenkins:jenkins /var/jenkins_home

USER jenkins